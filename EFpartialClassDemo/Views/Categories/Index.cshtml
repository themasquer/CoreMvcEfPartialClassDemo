@model IEnumerable<EFpartialClassDemo.Entities.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["DeleteCategoryMessage"] != null)
{
    <p class="text-danger">@TempData["DeleteCategoryMessage"]</p>
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductsCountDisplay)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
		@foreach (var item in Model) {
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Name)
					</td>
                    <td>
						@Html.DisplayFor(modelItem => item.ProductsCountDisplay)
					</td>
					<td>
						<a asp-action="Details" asp-route-id="@item.Id">Details</a>&nbsp;|&nbsp;
						<a asp-action="Edit" asp-route-id="@item.Id">Edit</a>&nbsp;|&nbsp;
						<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					</td>
				</tr>
		}
    </tbody>
</table>
